@model PyStudio.Model.ClientModel.PyRegisterUser
@{
    ViewData["Title"] = "重置密码";
    Layout = "~/Areas/Admin/Views/Shared/_SpecialLayout.cshtml";
}
<body class="page-body login-page login-light">
    <div class="login-container">
        <div class="row">
            <div class="col-sm-6">

                <script type="text/javascript">
                    jQuery(document).ready(function ($) {
                        setTimeout(function () { $(".fade-in-effect").addClass('in'); }, 1);
                    });
                </script>
                <form method="post" name="form_submit" asp-area="Admin" asp-controller="Account" asp-action="ConfirmPassword" class="login-form fade-in-effect validate">
                    <div class="login-header">
                        <a class="logo">
                            <img src="~/assets/images/logo-white-bg@2x.png" alt="" width="80" />
                            <span>找回密码</span>
                        </a>
                        <p>亲爱的用户，欢迎使用后台管理！</p>
                    </div>
                    <input type="hidden" name="UserName" value="@Model.UserName" />
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="UserPwd" autocomplete="off" />
                    </div>

                    <div class="form-group">
                        <input type="password" class="form-control" asp-for="ComfirmPwd" autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <button id="Save" type="button" class="btn btn-primary  btn-block text-left">
                            <i class="fa-lock"></i>
                            Get back
                        </button>
                        <span id="msgbox" style="color:red">@ViewData["msgbox"]</span>
                    </div>
                    <div class="login-footer">
                        <a href="/Admin/Account/Login">返回登录</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
