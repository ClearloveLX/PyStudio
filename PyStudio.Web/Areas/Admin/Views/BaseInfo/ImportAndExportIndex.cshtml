@using PyStudio.Model.Models.BaseInfo
@model IEnumerable<InfoEi>
@{
    ViewData["Title"] = "导入导出";
}
<div class="page-title">
    <div class="breadcrumb-env">
        <ol class="breadcrumb bc-1">
            <li>
                <a href="dashboard-1.html"><i class="fa-home"></i>主页</a>
            </li>
            <li>
                <a>基础信息</a>
            </li>
            <li class="active">
                <strong>导入导出Demo</strong>
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="alert alert-danger">
            <strong>Excel导入问题</strong> &nbsp; 确保实体和数据库字段对应。
        </div>
    </div>
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-body panel-border">
                <div class="col-md-4">
                    <a class="btn btn-primary text-left" asp-action="Export" download="@DateTime.Now.ToString("yyyyMMddHHmmssfff")">导出/下载模版</a>
                </div>
                <div class="col-md-8">
                    <form asp-action="Import" method="post" enctype="multipart/form-data">
                        <div class="col-md-8"><input type="file" class="form-control" id="field-4" name="excelFile"></div>
                        <div class="col-md-4"><input type="submit" class="btn btn-primary" value="上传" /></div>
                    </form>
                </div>
                <table class="table table-striped table-bordered table-hover lx-table">
                    <thead><tr><th style="width:25%">Col1</th><th style="width:25%">Col2</th><th style="width:25%">Col3</th><th style="width:25%">Col4</th></tr></thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="text-align:left">@item.Eicol1</td>
                                <td style="text-align:left">@item.Eicol2</td>
                                <td style="text-align:left">@item.Eicol3</td>
                                <td style="text-align:left">@item.Eicol4</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
